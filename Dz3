Console.Clear();
Console.WriteLine("Введите номер дня недели");
int day = int.Parse(Console.ReadLine()!);
if(day < 1 ||day > 7 )
{
    Console.WriteLine("Неверный номер.");
}
if(day <= 5)
{
    Console.WriteLine("Сегодня рабочий день.");
}
if(day > 5)
{
    Console.WriteLine("Поздравляем с выходными!");
}
